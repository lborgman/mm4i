{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // This disables the "JSDoc typedef may be converted to TypeScript type" suggestion
    // "suggest.completeJSDocs": false,
  },
  "include": [
    "js/**/*",
    "global.d.ts"
  ]
}